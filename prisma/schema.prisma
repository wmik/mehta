generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String          @id @default(cuid())
  email         String          @unique
  name          String?
  password      String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  emailVerified DateTime?
  role          String          @default("supervisor")
  image         String?
  deletedAt     DateTime?
  settings      Json?
  Authenticator Authenticator[]
  accounts      Account[]
  fellows       Fellow[]
  meetings      Meeting[]
  sessions      Session[]
  notifications Notification[]

  @@map("users")
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  deletedAt         DateTime?
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  sessionToken String    @unique
  userId       String
  expires      DateTime
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
  @@map("verification_tokens")
}

model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?
  user                 User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

model Fellow {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String
  status       String    @default("ACTIVE")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  supervisorId String
  deletedAt    DateTime?
  supervisor   User      @relation(fields: [supervisorId], references: [id], onDelete: Cascade)
  meetings     Meeting[]

  @@map("fellows")
}

model Meeting {
  id                String            @id @default(cuid())
  groupId           String
  date              DateTime
  transcript        String?
  status            String            @default("PENDING")
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  fellowId          String
  supervisorId      String
  deletedAt         DateTime?
  publicAccessToken String?
  runId             String?
  analyses          MeetingAnalysis[]
  fellow            Fellow            @relation(fields: [fellowId], references: [id], onDelete: Cascade)
  supervisor        User              @relation(fields: [supervisorId], references: [id], onDelete: Cascade)

  @@map("meetings")
}

model MeetingAnalysis {
  id                  String    @id @default(cuid())
  summary             String
  contentCoverage     Json
  facilitationQuality Json
  protocolSafety      Json
  riskDetection       Json
  supervisorStatus    String?
  supervisorNotes     String?
  reviewedBy          String?
  reviewedAt          DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  meetingId           String
  deletedAt           DateTime?
  meeting             Meeting   @relation(fields: [meetingId], references: [id], onDelete: Cascade)

  @@map("meeting_analyses")
}

model Notification {
  id          String    @id @default(cuid())
  title       String
  description String
  custom      Json?     @default("{}")
  isRead      Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userId      String
  deletedAt   DateTime?
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}
