# =============================================================================
# Mehta - Docker Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================================================
# Database (handled by docker-compose.yml)
# =============================================================================
DATABASE_URL=postgresql://mehta:mehta@db:5432/mehta

# =============================================================================
# Redis (handled by docker-compose.yml)
# =============================================================================
REDIS_URL=redis://cache:6379

# =============================================================================
# Authentication
# =============================================================================
NEXTAUTH_SECRET=mehta-dev-secret-minimum-32-characters-long
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# AI Providers (optional - leave empty if not using)
# =============================================================================
AI_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
OLLAMA_API_URL=
OLLAMA_API_KEY=
OLLAMA_MODEL=phi3

# =============================================================================
# AWS S3 (optional)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# =============================================================================
# Trigger.dev
# =============================================================================
TRIGGER_SECRET_KEY=

# =============================================================================
# Sentry (optional)
# =============================================================================
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_URL=

# =============================================================================
# Mixpanel Analytics (optional)
# =============================================================================
NEXT_PUBLIC_MIXPANEL_TOKEN=
